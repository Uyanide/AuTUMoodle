{
    "$schema": "https://raw.githubusercontent.com/Uyanide/AuTUMoodle/master/config/config.schema.json",
    "destination_base": "/data",
    "cache_dir": "/cache",
    "summary": {
        "enabled": true,
        "path": "/data/summaries"
    },
    "session": {
        "save": true
    },
    "playwright": {
        "headless": true
    },
    "log_level": "INFO",
    "ignored_files": [
        {
            "pattern": "intro.html",
            "match_type": "literal"
        },
        {
            "pattern": "Feedback als Kommentar.html",
            "match_type": "literal"
        }
    ],
    "courses": [
        {
            "pattern": "Analysis für Informatik [MA0902]",
            "match_type": "literal",
            "semester": "WS25_26",
            "destination_base": "AnaFI",
            "config_type": "category_manual",
            "config": {
                "rules": {
                    "categories": [
                        {
                            "pattern": "Übungen",
                            "match_type": "literal"
                        },
                        {
                            "pattern": "Aufgabenabgabe",
                            "match_type": "literal"
                        },
                        {
                            "pattern": ".*",
                            "match_type": "regex",
                            "destination": "Sonstiges"
                        }
                    ],
                    "entries": [
                        {
                            "pattern": "Übungsgruppen",
                            "match_type": "regex",
                            "ignore": true
                        },
                        {
                            "pattern": "^Mitschriften",
                            "match_type": "regex",
                            "ignore": true
                        }
                    ]
                }
            }
        }
    ]
}
